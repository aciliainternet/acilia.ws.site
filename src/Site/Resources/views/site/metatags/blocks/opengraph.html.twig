<meta property="og:title" content="{{ og_title }}" />
<meta property="og:description" content="{{ description }}" />
<meta property="og:url" content="{{ app.request.uri|raw }}" />

{% if og_image %}
    <meta property="og:image" content="{{ absolute_url(og_image)|raw }}">

    {% if og_image_width %}
        <meta property="og:image:width" content="{{ og_image_width|raw }}">
    {% endif %}

    {% if og_image_height %}
        <meta property="og:image:height" content="{{ og_image_height|raw }}">
    {% endif %}
{% endif %}

{% if og_type %}
    <meta property="og:type" content="{{ og_type|raw }}">
{% endif %}

{% if og_video %}
    <meta property="og:video" content="{{ og_video|raw }}">

    {% if og_video_secure_url %}
        <meta property="og:video:secure_url" content="{{ og_video_secure_url|raw }}" />
    {% endif %}

    {% if og_video_width %}
        <meta property="og:video:width" content="{{ og_video_width }}" />
    {% endif %}

    {% if og_video_height %}
        <meta property="og:video:height" content="{{ og_video_height }}" />
    {% endif %}

    {% if og_video_type %}
        <meta property="og:video:type" content="{{ og_video_type|raw }}">
    {% endif %}
{% endif %}